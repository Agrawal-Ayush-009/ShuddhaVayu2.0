<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPVerification"
    android:background="@drawable/background_2"
    >

    <TextView
        android:id="@+id/wel"
        android:layout_marginTop="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Welcome"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/cit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Citizen"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wel"
        android:fontFamily="@font/inter_semibold"
        android:textSize="40dp"
        android:layout_marginLeft="33dp"
        />

    <TextView
        android:id="@+id/OTPHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="41dp"
        android:layout_marginLeft="33dp"
        android:fontFamily="@font/inter_medium"
        android:text="Verify the OTP"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cit"

        />

    <EditText
        android:id="@+id/otp3"
        android:layout_width="34dp"
        android:layout_height="37dp"
        android:background="@drawable/opttext"
        android:maxLength="1"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OTPHeading"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="13dp"
        />

    <EditText
        android:id="@+id/otp2"
        android:layout_width="34dp"
        android:layout_height="37dp"
        android:background="@drawable/opttext"
        android:maxLength="1"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/otp1"
        app:layout_constraintTop_toBottomOf="@+id/OTPHeading"
        app:layout_constraintRight_toLeftOf="@id/otp3"
        android:layout_marginTop="13dp"
        />

    <EditText
        android:id="@+id/otp1"
        android:layout_width="34dp"
        android:layout_height="37dp"
        android:background="@drawable/opttext"
        android:maxLength="1"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OTPHeading"
        app:layout_constraintRight_toLeftOf="@id/otp2"
        android:layout_marginTop="13dp"
        android:textSize="25dp"
        />

    <EditText
        android:id="@+id/otp4"
        android:layout_width="34dp"
        android:layout_height="37dp"
        android:background="@drawable/opttext"
        android:maxLength="1"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/otp3"
        app:layout_constraintTop_toBottomOf="@+id/OTPHeading"
        app:layout_constraintRight_toLeftOf="@id/otp5"
        android:layout_marginTop="13dp"
        />

    <EditText
        android:id="@+id/otp5"
        android:layout_width="34dp"
        android:layout_height="37dp"
        android:background="@drawable/opttext"
        android:maxLength="1"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/otp4"
        app:layout_constraintTop_toBottomOf="@+id/OTPHeading"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="13dp"
        android:layout_marginRight="20dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/solid_button"
        android:layout_margin="35dp"
        android:id="@id/otpButton"
        app:layout_constraintTop_toBottomOf="@id/otp3"
        android:text="Verify OTP"
        android:onClick="otpButton"
        android:textColor="@color/white"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textAllCaps="false"
        android:fontFamily="@font/inter_semibold"
        android:textSize="16dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>